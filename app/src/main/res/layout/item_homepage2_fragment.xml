<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        style="@style/ItemLinerStyle">
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <ImageView
            style="@style/ItemImageStyle"
            android:id="@+id/imageView_item2_info"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/imageView_item2_map"
            style="@style/ItemImageStyle"/>
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        style="@style/ItemLinerStyle">
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        <ImageView
            style="@style/ItemImageStyle"
            android:id="@+id/imageView_item2_traffic"/>
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        style="@style/ItemLinerStyle">
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <ImageView
            style="@style/ItemImageStyle"
            android:id="@+id/imageView_item2_phone"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/imageView_item2_move"
            style="@style/ItemImageStyle"/>
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
